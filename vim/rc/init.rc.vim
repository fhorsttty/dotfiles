set number
set tabstop=2
set softtabstop=2
set expandtab
set shiftwidth=2
set modeline
set autoindent
set noequalalways
set visualbell t_vb=
set noerrorbells
set t_Co=256
set t_ut=

set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch

set directory=~/.vim/tmp  " swapfile
set backupdir=~/.vim/tmp  " .bak
set undodir=~/.vim/tmp    " .un~
set viminfo+=n$HOME/.vim/tmp/viminfo

colorscheme molokai
